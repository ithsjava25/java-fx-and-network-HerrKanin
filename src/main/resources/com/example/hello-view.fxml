<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.ChatController">
    <BorderPane prefHeight="200.0" prefWidth="200.0">
        <bottom>
            <HBox prefHeight="60.0" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <TextField fx:id="inputField" HBox.hgrow="ALWAYS"/>
                <Button text="Bifoga fil" onAction="#onAttachedClicked"/>
                <Button mnemonicParsing="false" onAction="#onSendClicked" text="Send"/>
            </HBox>
        </bottom>
        <top>
            <HBox prefHeight="40.0" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER_LEFT">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <Label fx:id="topicLabel" text="Connected"/>
            </HBox>
        </top>
        <center>
            <ScrollPane fitToWidth="true" BorderPane.alignment="CENTER">
                <VBox fx:id="chatBox" spacing="8.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </VBox>
            </ScrollPane>
        </center>
    </BorderPane>
</StackPane>
