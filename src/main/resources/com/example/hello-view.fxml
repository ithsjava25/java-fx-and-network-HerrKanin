<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.HelloController">
    <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <center>
            <TextArea fx:id="chatArea" editable="false" prefHeight="400.0" prefWidth="600.0" wrapText="true" BorderPane.alignment="CENTER" />
         </center>
         <bottom>
            <HBox prefHeight="60.0" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <children>
                  <TextField fx:id="inputField" HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" text="Send" />
               </children>
            </HBox>
         </bottom>
         <top>
            <HBox prefHeight="40.0" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER_LEFT">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <children>
                  <Label fx:id="topicLabel" text="Connected to: testchat123" />
               </children>
            </HBox>
         </top></BorderPane>
    </children>
</StackPane>
